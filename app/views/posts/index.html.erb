
<h1> All Posts </h1>

<% if user_signed_in? %>
  <%= current_user.username %>
<% end %>

<%= simple_form_for @post do |f| %>
  <%= f.input_field :text, label: 'name', placeholder: 'what\'s in your mind?' %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.button :submit, 'Post' %>
<% end %>

<% @posts.each do |post| %>
  <p><%= post.user.username %> said:</p>
  <% if post.image.attached? %>
    <div class="post-image">
    <%= image_tag post.image %>
    </div>
  <% end %>


  <div><%= post.text %></div>
<% end %>

