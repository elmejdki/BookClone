<!DOCTYPE html>
<html>
  <head>
    <title>Bookclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if notice %>
        <div class="has-background-primary notification">
          <button id="delete" class="delete"></button>
            <p class="has-text-white" ><%= notice %></p>
            <p class="has-text-white" ><%= alert %></p>
        </div>
      <% end %>

      <% if alert %>
        <div class="has-background-primary notification">
          <button id="delete" class="delete"></button>
            <p class="has-text-white" ><%= notice %></p>
            <p class="has-text-white" ><%= alert %></p>
        </div>
      <% end %>
      <script>
        const notificaton_btn = document.getElementById('delete')

        notificaton_btn.addEventListener('click', (e) => {
          e.target.parentElement.style.display = 'none'
        })
      </script>

      <nav class="nav-bar">
        <div class="nav-bar-content">
          <a class="logo-container" href="/">
            <span class="nav-logo">
              <i class="fab fa-bimobject"></i>
            </span>
            <span class="logo-text">
              BookClone
            </span>
          </a>
          <!-- FIX: these links need to be changed -->
          <%= link_to 'TimeLine', root_path, class: 'nav-bar-item' %>
          <%= link_to 'Friends', root_path, class: 'nav-bar-item' %>
          <%= link_to 'Messages', root_path, class: 'nav-bar-item' %>
        </div>
        <div class="search-bar">
          <input type="text" class="input" placeholder="Search">
          <i class="fa fa-search"></i>
        </div>
        <div>
          <% if user_signed_in? %>
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to 'Sign In', user_session_path, class: "sign-link" %>
            <%= link_to 'Sign Up', new_user_registration_path, class: "sign-link" %>
          <% end %>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
