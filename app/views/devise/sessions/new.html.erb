<div class="page-wrapper">
  <div class="form-container">
    <h2 class="title is-3">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'label' %>
        <div class="control has-icons-left">
          <%= f.email_field :email, autofocus: true, placeholder: 'example@email.com', class: 'input' %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label' %>
        <div class="control has-icons-left">
          <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
          <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
          </span>
        </div>
      </div>
      <div class="field">
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <div class="control">
            <label class="checkbox">
              <%= f.check_box :remember_me %>
              Remember Me
            </label>
          </div>
        </div>
      <% end %>


      <div class="actions">
        <%= f.submit "Log in", class: 'button is-base' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
